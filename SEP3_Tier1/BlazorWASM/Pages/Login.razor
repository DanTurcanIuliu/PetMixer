@using HttpClients.ClientInterfaces
@using Domain.DTOs
@using Blazored.LocalStorage
@inject NavigationManager navMgr
@inject IAuthService authService

<style>
    body{
        background-image: url("img/login_background.jpg");
            background-size: cover;
    }
    
</style>

<AuthorizeView>
    <NotAuthorized>
        <div class="container col-xl-10 col-xxl-8 px-4 py-5">
            <div class="row align-items-center g-lg-5 py-5">
              <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Pet Mixer Software</h1>
                <p class="col-lg-10 fs-4">A program that helps you to find somebody that can take care of your pet. Or you can be the person that can provide such a services.</p>
              </div>
              <div class="col-md-10 mx-auto col-lg-5">
                  <LoginView/>
              </div>
            </div>
          </div>
    </NotAuthorized>
    <Authorized>
        <div class="card">
            <h3>Hello, @context.User.Identity.Name</h3>
        </div>
    </Authorized>
</AuthorizeView>

